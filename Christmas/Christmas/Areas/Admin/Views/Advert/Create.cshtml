@model AdvertCreateVM
@{
    ViewData["Title"] = "Create";
}

<div>
    <form class="forms-sample mt-5" method="post" enctype="multipart/form-data" asp-action="Create">
        <div class="form-group">
            <label asp-for="Desc">Description</label>
            <textarea style="border-color:grey;" asp-for="Desc" id="description" cols="70"></textarea>
            <span asp-validation-for="Desc"></span>
        </div>
        <div class="form-group">
            <label asp-for="Photo">Image</label>
            <input asp-for="Photo" class="form-control">
            <span asp-validation-for="Photo"></span>
        </div>

        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <div class="back mt-3">
            <a class="btn btn-info" asp-action="Index">Back</a>
        </div>
    </form>

</div>

@section script{

    <script src="~/ckeditor/ckeditor.js"></script>
    <script>CKEDITOR.replace("description");</script>
}

