@model AdvertEditVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <h1>Edit</h1>
    <form class="forms-sample" method="post" enctype="multipart/form-data">
        
        <div class="form-group">
            <label asp-for="Desc">Description</label>
            <input asp-for="Desc" class="form-control" placeholder="Description">
            <span asp-validation-for="Desc"></span>

        </div>
        <div class="form-group">
            <label asp-for="Photo">Logo</label>
            <div class="image">
                <img src="~/img/banners/@Model.Image" style="width:30%; height:15%" />
                <input asp-for="Photo" class="form-control">
                <span asp-validation-for="Photo"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <div class="back mt-3">
            <a class="btn btn-info" asp-action="Index">Back</a>
        </div>
    </form>
</div>

