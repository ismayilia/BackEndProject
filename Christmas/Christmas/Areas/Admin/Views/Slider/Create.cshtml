@model SliderCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Photo">Image</label>
            <input asp-for="Photo" class="form-control my-3">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="Discount">Offer</label>
            <input asp-for="Discount" type="text" class="form-control ">
            <span class="text-danger" asp-validation-for="Discount"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="Title">Heading</label>
            <input asp-for="Title" type="text" class="form-control ">
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Desc">Description</label>
            <input asp-for="Desc" type="text" class="form-control ">
            <span asp-validation-for="Desc" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mr-4">Submit</button>
        <a class="btn btn-light" asp-action="Index">Back</a>
    </form>
</div>

