@model TeamCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5" style="margin-left:30px">
    <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Photo">Image</label>
            <input asp-for="Photo" class="form-control my-3">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="FullName">FullName</label>
            <input asp-for="FullName" type="text" class="form-control ">
            <span class="text-danger" asp-validation-for="FullName"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="Position">Position</label>
            <input asp-for="Position" type="text" class="form-control ">
            <span class="text-danger" asp-validation-for="Position"></span>
        </div>

        <button type="submit" class="btn btn-primary mr-4">Submit</button>
        <a class="btn btn-light" asp-action="Index">Back</a>
    </form>
</div>

