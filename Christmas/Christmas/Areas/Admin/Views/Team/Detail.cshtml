@model TeamVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container mt-5" style="margin-left:30px;">
    <div class="image">
        <img src="~/img/team/@Model.Image" style="width:30%; height:30%;" />
    </div>

    <h1>@Model.FullName</h1>
    <h3>@Model.Position</h3>

    <div class="back mt-2">
        <a class="btn btn-info text-white" asp-action="Index">Back</a>
    </div>
</div>



